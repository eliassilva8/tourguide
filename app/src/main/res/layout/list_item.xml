<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/list_item_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/event_image_view"
        android:layout_width="@dimen/list_item_height"
        android:layout_height="@dimen/list_item_height"
        android:padding="27dp" />

    <LinearLayout
        android:id="@+id/event_info_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_name_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:textColor="@color/textWhite"
                android:textSize="@dimen/text_title" />

            <TextView
                android:id="@+id/event_address_view"
                style="@style/ItemTextView" />

            <TextView
                android:id="@+id/event_number_view"
                style="@style/ItemTextView" />

            <TextView
                android:id="@+id/event_date_view"
                style="@style/ItemTextView" />
        </LinearLayout>

        <ImageView
            android:id="@+id/event_google_search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:layout_weight="0"
            android:src="@drawable/ic_search_white_36dp" />
    </LinearLayout>

</LinearLayout>